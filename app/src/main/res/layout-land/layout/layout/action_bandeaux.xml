<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnActionBandeauxView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="@string/actionneurs_bandeaux_maj"
        android:textSize="@dimen/_17sdp"
        android:clickable="false"
        android:focusable="false"
        fancy:fb_borderColor="@color/myRed"
        fancy:fb_borderWidth="@dimen/_1sdp"
        fancy:fb_defaultColor="@color/myRed"
        fancy:fb_focusColor="#FFFFFF"
        fancy:fb_radius="@dimen/_60sdp" >
    </mehdi.sakout.fancybuttons.FancyButton>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/porteLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewActionPorte"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="@string/textviewporte"
                android:textSize="@dimen/_15sdp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/buttonActionPortePlus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                fancy:fb_borderColor="@color/myGray"
                fancy:fb_borderWidth="@dimen/_1sdp"
                fancy:fb_defaultColor="@color/myGray"
                fancy:fb_textColor="@color/myGreen"
                fancy:fb_textSize="0dp"
                fancy:fb_focusColor="#FFFFFF"
                fancy:fb_fontIconResource="\uf067"
                fancy:fb_fontIconSize="@dimen/_15sdp"
                fancy:fb_radius="@dimen/_2sdp" />

            <Space
                android:layout_width="@dimen/_4sdp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewActionPorte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/layout_border"
                android:orientation="horizontal"
                android:scrollbars="horizontal" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_2sdp" />

        <LinearLayout
            android:id="@+id/flecheLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewActionFleche"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="@string/textviewfleche"
                android:textSize="@dimen/_15sdp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/buttonActionFlechePlus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                fancy:fb_borderColor="@color/myGray"
                fancy:fb_borderWidth="@dimen/_1sdp"
                fancy:fb_defaultColor="@color/myGray"
                fancy:fb_textColor="@color/myGreen"
                fancy:fb_textSize="0dp"
                fancy:fb_focusColor="#FFFFFF"
                fancy:fb_fontIconResource="\uf067"
                fancy:fb_fontIconSize="@dimen/_15sdp"
                fancy:fb_radius="@dimen/_2sdp" />

            <Space
                android:layout_width="@dimen/_4sdp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewActionFleche"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/layout_border"
                android:orientation="horizontal"
                android:scrollbars="horizontal" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_2sdp" />

        <LinearLayout
            android:id="@+id/levageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewActionLevage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="@string/textviewlevage"
                android:textSize="@dimen/_15sdp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/buttonActionLevagePlus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                fancy:fb_borderColor="@color/myGray"
                fancy:fb_borderWidth="@dimen/_1sdp"
                fancy:fb_defaultColor="@color/myGray"
                fancy:fb_textColor="@color/myGreen"
                fancy:fb_textSize="0dp"
                fancy:fb_focusColor="#FFFFFF"
                fancy:fb_fontIconResource="\uf067"
                fancy:fb_fontIconSize="@dimen/_15sdp"
                fancy:fb_radius="@dimen/_2sdp" />

            <Space
                android:layout_width="@dimen/_4sdp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewActionLevage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/layout_border"
                android:orientation="horizontal"
                android:scrollbars="horizontal" />

        </LinearLayout>
    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnActionBandeauxSave"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="end"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/save"
        android:textSize="@dimen/_12sdp"
        fancy:fb_borderColor="@color/myBlack"
        fancy:fb_borderWidth="@dimen/_2sdp"
        fancy:fb_defaultColor="@color/myGreen"
        fancy:fb_focusColor="#FFFFFF"
        fancy:fb_radius="@dimen/_60sdp" />
</LinearLayout>