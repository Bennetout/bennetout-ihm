<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monier.bennetout.ihmclient">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:hardwareAccelerated="true"
        android:supportsRtl="true"
        android:background="@color/myWhite"
        android:theme="@style/myStyle"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name=".MainActivity"
            android:background="@color/myWhite"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".configuration.activities.ConfigActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.CallibrationsActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.CallibFlecheActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.CallibLevageActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.CallibPorteActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.CallibNiveauActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.CallibTamisActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.ActionBandeauxActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.ActionneursActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.TypesBoutonsActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.AffichagesActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".configuration.activities.ParamsActivity"
            android:screenOrientation="landscape">
        </activity>

    </application>
</manifest>
